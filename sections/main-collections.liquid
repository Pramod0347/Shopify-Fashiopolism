{% style %}
  .main-collections_page{
    margin:10rem 0;
  }
{% endstyle %}

<div class="page-width main-collections_page">
  <h4 class="main-collections_page_heading flex justify-center mb-15">COLLECTIONS</h4>
  <div class="grid grid--2-col grid--4-col-desktop">
    {% for collection in collections %}
      <div class="grid__item">
        {% render 'collection-card-section', collection: collection %}
      </div>
    {% endfor %}
  </div>
</div>
