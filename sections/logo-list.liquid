{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}

<div class="logo-list section-{{ section.id }}-padding">
  {% if section.blocks.size > 0 %}
    <div class="page-width grid grid--3-col grid--6-col-desktop">
      {% for block in section.blocks %}
        <div class="grid__item">
          {% if block.settings.image_logo != blank %}
            {% render 'image', mobileSrc: block.settings.image_logo, desktopSrc: block.settings.image_logo %}
          {% endif %}
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Logo list",
  "tag": "section",
  "class": "homepage-section",
  "settings": [
  {
    "type": "header",
    "content": "Section padding"
  },
  {
    "type": "range",
    "id": "padding_top",
    "min": 0,
    "max": 150,
    "step": 2,
    "unit": "px",
    "label": "Padding top",
    "default": 40
  },
  {
    "type": "range",
    "id": "padding_bottom",
    "min": 0,
    "max": 150,
    "step": 2,
    "unit": "px",
    "label": "Padding bottom",
    "default": 40
  }
  ],
  "blocks": [
    {
      "name": "Logo image",
      "type": "image-item",
      "limit": 6,
      "settings": [
        {
          "type": "image_picker",
          "id": "image_logo",
          "info": "Logo",
          "label": "Logo image"
        }
      ]

    }
  ],
  "presets": [
    {
      "name": "Logo list"
    }
  ]
}
{% endschema %}
