{% schema %}
{
  "name": "Announcement Bar",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Check box selection"
    },
    {
      "type": "checkbox",
      "id": "show_announcement_bar",
      "label": "Show announcement",
      "default": true
    },
    {
      "type": "header",
      "content": "Text settings"
    },
    {
      "type": "richtext",
      "id": "announcement_text",
      "info": "Navigation text",
      "label": "Text"
    },
    {
      "type": "header",
      "content": "Color settings"
    },
    {
      "type": "color",
      "id": "announcement_text_color",
      "label": "Text color",
      "default": "#ffffff"
    }, {
      "type": "color",
      "id": "announcement_background_color",
      "label": "Background color",
      "default": "#000000"
    }
  ]
}
{% endschema %}
